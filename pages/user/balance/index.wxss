/* pages/user/balance/index.wxss */
page{
    background: #f0eff4
}
.balance-box{
    background: #ffffff;
    padding: 30rpx;
}
.balance-box-t{
    font-size: 22px;
}
.balance-box-st{
    margin-top: 10rpx;
    display: block;
    font-size: 14px;
    color: #999999;
}
.recharge-title{
    padding:60rpx 30rpx;
    font-size: 12px;
    color: #999999;
}
.recharge-list{
    padding:60rpx 30rpx 40rpx;
    background: #ffffff;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}
.recharge-item{
    width: 42%;
    text-align: center;
    border: #fd621c solid 1px;
    border-radius: 2px;
    font-size: 14px;
    padding: 30rpx 0;
    margin-bottom: 20rpx;
}
.recharge-item-active{
   background: #fd621c;
   color: #ffffff;
}
.recharge-btn{
    background:#fd621c;
    color: #ffffff; 
}
.recharge-info{
    padding: 60rpx 30rpx 30rpx;
    font-size: 12px;
    color: #999999;
    text-align: center;
    line-height: 18px;
}
.inline{
    display: inline;
}
.recharge-btn-g{
    padding:0 30rpx;
}