.map-container{
    width: 100%;
    height: 100%;
    overflow: hidden;
    padding-top: 90rpx;
}
.map-info{
    position: absolute;
    top: 50%;
    left: 50%;
    width: 240rpx;
    padding: 30rpx 0;
    text-align: center;
    z-index: 100;
    margin: -90rpx 0 0 -120rpx;
    border: #fd621c solid 1px;
    font-size: 12px;
    color: #333;
}
.map-nav{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    border-bottom: #e5e5e7 solid 1px;
    background: #fff;
    padding:20rpx;
    z-index: 100;
    margin: auto;
    color: #535353;
    font-size: 14px;
}
.map-arrow{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 25rpx;
}
.map-icon{
   width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-right: 20rpx; 
}