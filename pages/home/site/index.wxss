/* pages/home/site/index.wxss */
page{
    background: #f9f9fb;
}
.site-card{
    display: flex;
    background: #fff;
     padding: 30rpx;
}
.site-img{
    width: 230rpx;
    height: 150rpx;
    margin-right: 15rpx;
}
.site-cnt{
    width: 490rpx;
    padding-top: 10rpx;
    position: relative;
    height: 150rpx;
}
.site-icon{
    width: 30rpx;
    height: 30rpx;
}
.site-title{
    color: #333;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.site-p{
    margin-top: 10rpx;
    font-size: 12px;
    color: #999;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.site-info{
    position: absolute;
    bottom: 10rpx;
    font-size: 12px;
    color: #bfbfbf;
}
.site-list{
  margin-bottom: 20rpx;
}